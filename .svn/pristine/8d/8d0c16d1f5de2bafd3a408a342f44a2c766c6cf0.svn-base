 white-space:-o-pre-wrap; /* Opera 7 */ 
 word-wrap: break-word; line-height:1.8; text-align:justify; text-justify:distribute-all-lines; margin-bottom:.8em;}

.zanBox{ text-align: center;
}
.zanBox .ficon{ display: block;width:80px; height:80px; line-height: 80px; margin:0 auto; border:2px #E4E4E4 solid; 
-webkit-border-radius:60px;
border-radius:60px;
 background:#fefefe; color:#929292; font-size:38px;}
.zanBox .ic_zaned{color:#9C9C9C;} 
.zanBox .numZan{height:40px; line-height: 40px; color:#888; font-size:1.25em;}

.toolWrap{background-color:#fff; border-top:1px #d7d7d7 solid; border-bottom:1px #d7d7d7 solid; margin-bottom:.8em;}
.toolBar{  width:100%; height:3em; line-height: 3;  margin:0 auto; }
.toolBar span,
.toolBar a{display: inline-block; vertical-align: top; color:#959595; position:relative;}
.toolBar a em,
.toolBar span em{ font-style:normal; padding:0 2px;}
.toolBar a{padding:0 20px;}
.toolBar .toolZan{float:right; padding:0 20px;}
.toolBar .toolInfo .toolArrow{ display: none; }
.toolBar .toolLine{color:#d7d7d7;}
.toolBar .toolCurrent{color:#333;}
.toolBar .toolCurrent .toolArrow{ display: block; }

.toolArrow:after{
	content: "";
	z-index: 99;
	position: absolute;
	width: 0; height:0;
	bottom:-1px; left:26px;
	border-left:10px solid transparent;
	border-right: 10px solid transparent;
	border-bottom:13px solid #f8f8f8;	
}
.toolArrow:before{
	content: "";
	z-index: 98;
	position: absolute;
	width: 0; height:0;
	bottom:0; left:25px;
	border-left:11px solid transparent;
	border-right: 11px solid transparent;
	border-bottom:14px solid #d7d7d7;
}

.commWrap{/*border-top:1px #ddd solid;  border-bottom:1px #ddd solid;*/ margin-bottom:.8em;}
.commentBox{ width:94%; margin:0 auto; }
.commentIteam{ clear: both; position:relative; min-height:6.25em;  padding:1em 0 .5em 0;}
.commentIteam .empty{ text-align: center; color:#8c8c8c; position:relative; padding-top:120px;}
.commentIteam .empty:before{
	content: "\f0e5";
	font-family: FontAwesome;
	z-index: 1;
	position:absolute;
	width:100px; height:100px;
	font-size:88px;
	color:#d0d0d0;
	top:0; left:50%;
	-webkit-transform: translateX(-50px);
	transform: translateX(-50px);
}

.commentIteam .commImg{position:absolute; top:1em; left: 0; width:4.25em; height:4.25em; border:1px #ddd solid; background-color:#eee;}
.commentIteam .commInfo{margin-left:4.8em;}
.commentIteam .commInfo h3{}
.commentIteam .commInfo .dateTime{color:#909090; margin-bottom:2px;}
.commentIteam .commInfo .con {line-height:1.8; text-align:justify; text-justify:distribute-all-lines; color:#6d6d6d;}
.commentIteam .commInfo .con a{color:#0079F6; padding:0 4px;}
.commentIteam .commInfo .con .iemotion{ display: inline-block; width:1.25em; height: 1.25em; vertical-align: top; margin-top:3px;}
.hLine{height:2px; overflow: hidden; border-bottom:1px #f0f0f0 solid;}

