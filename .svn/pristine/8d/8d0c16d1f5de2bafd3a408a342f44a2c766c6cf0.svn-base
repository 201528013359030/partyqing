ul.textList{ width:98%; margin:0 auto; overflow:hidden; padding:.8em;}
.textList li{ line-height:2; clear: both;}
.textList li .textTit{float:left; color:#0079F6; width:30%; width:20%\9; text-align: center\9; }
.textList li .textValue{float:left; color:#525252; width:70%; width:80%\9; }
.textList li .textCon{clear: both; color:#525252; text-align:justify; text-justify:distribute-all-lines;}

.btnBox{width:100%; height:3.25em; text-align: center; margin:10px 0;}
.btnBox a{display: block; height:3.25em; line-height:3.25; color:#fff; border:1px #0580AC solid;
-webkit-border-radius:4px;
-moz-border-radius:4px;
-ms-border-radius:4px;
-o-border-radius:4px;
border-radius:4px;
background:#00A0DA;}
.btnBox a .ficon{margin-top:.8em; margin-right:8px; *margin-top:0;}
.btnBox a.default{background-color:#fff; border:1px #e5e5e5 solid; color:#999;}


@media screen and (min-width:640px){
	.wrap{/* width:640px;*/ background:#f8f8f8;}
	.textList{width:90%; }
	.textList li .textTit{width:20%; text-align: center;}
	.textList li .textValue{ width:80%;}
}



@media screen and (min-width:480px) and (max-width: 640px){
	.textList{width:90%;}
	.textList li .textTit{width:20%; text-align: center;}
	.textList li .textValue{ width:80%;}
}

@media screen and (min-width:320px) and (max-width: 480px){
	.textList{width:98%; font-size:.875em;}
	.textList li .textTit{width:28%;}
	.textList li .textValue{ width:72%;}
}

@media screen and(min-width:310px) and (max-width:320px){
	.textList{width:98%;}
	.textList li .textTit{width:30%; }
	.textList li .textValue{ width:70%;}
}

@media screen and (max-width:310px){
	.textList{width:98%; }
	.textList li .textTit{display: block; float: none; width:100%;}
	.textList li .textValue{display: block; float: none;  width:100%;}
	.lowscreen{ display: none;}
}

.bounce {
	-webkit-animation: bounce 0.4s;
	animation: bounce 0.4s;
}

@-webkit-keyframes bounce {
	0%, 20%, 50%, 80%, 100% {-webkit-transform: translateY(0);}
	40% {-webkit-transform: translateY(-30px);}
	60% {-webkit-transform: translateY(-15px);}
}

.loading{  display: block;
  min-height: 50px;
  background: url(../img/zt/loading.gif) no-repeat center center;
  -webkit-background-size: 19px auto;
  background-size: 19px auto;}

.jslider *{-webkit-user-select:none;-moz-user-select:none;-ms-user-select:none;user-select:none;}
.jslider{position:absolute;top:0;left:0;right:0;bottom:0;background-color:#000;}
.jslider .jslider-cont{}
.jslider .jwrap{float:left;z-index:1;overflow:hidden;text-align:center;}
.jslider .scroller{z-index:1;}
.jslider .scroller img{max-width:100%;vertical-align:middle;opacity:0;-webkit-transition:opacity .3s ease-out;}
.jslider .ctrlBar{position:absolute;bottom:30px;left:0;z-index:99;width:100%;line-height:30px;text-align:center;color:#fff;}
.jslider .ctrlBar .curPage,
.jslider .ctrlBar .pageCount{text-shadow:0 1px 1px rgba(0,0,0,.35);}
.jslider .ctrlBar a{display:block;width:72px;height:30px;line-height:30px;text-align:center;font-size:16px;color:#fff;background:rgba(128,128,128,.4);-webkit-box-shadow:0 0 1px rgba(0,0,0,.3) inset;box-shadow:0 0 1px rgba(0,0,0,.3) inset;border-radius:2px;-webkit-border-radius:2px;}

.jslider .jclose{float:left; margin:0 0 0 15px; position:absolute; left: 0; top: 0; }
.jslider .ctrlZan{float:right;margin:0 15px 0 0;}
.jslider .ctrlZan .jnum{font-size:15px;}
.jslider .ctrlZan .ficon{float:left;margin:3px 0 0 10px;}
.jslider .ctrlZan span{width:35px;display:block;height:30px;text-align:center;float:left;}

