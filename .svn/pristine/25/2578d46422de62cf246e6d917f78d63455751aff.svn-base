        $detail = $command->queryAll();
        //print_r($detail[0]);
        if(isset($detail[0])){
        	$detail0=$detail[0];
        }else{
        	$detail0="";
        }
        return $this->render('index', [ 
        		'info'=> $detail0,       		
        		]);              
    }

}
